<Window x:Class="TranslatorTool.ToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToolWindow" Height="300" Width="300" Loaded="Window_Loaded" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="1">
            <Button Content="Отмена" Height="30" HorizontalAlignment="Left" Margin="5" Padding="5" Click="Button_Click" FontFamily="Centure Gothic"></Button>
            <Button Content="Сохранить" Height="30" HorizontalAlignment="Right" Margin="5" Padding="5" Click="Button_Click_1" FontFamily="Century Gothic"></Button>

        </DockPanel>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Content="Быстрая клавиша перевода:" Margin="0,10" FontFamily="Century Gothic"/>
            <ToggleButton Name="KeyCode" Content="Изменить" Height="30" HorizontalAlignment="Left" Margin="200,10,0,10" Background="White" BorderBrush="#FF086AF7" FontFamily="Century Gothic" Padding="5"/>
        </Grid>
    </Grid>
</Window>
